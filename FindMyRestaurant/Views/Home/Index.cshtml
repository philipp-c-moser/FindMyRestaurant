@using FindMyRestaurant.Framework.Helpers
@{
    ViewBag.Title = "Dashboard";
}


<div class="wrapper">
    <div class="container-fluid">

        @CustomHtmlHelper.PageTitleRow(ViewBag.Title)


        <div class="row">
            <div class="col-xl-6 col-md-6">
                <div class="card-box widget-user">
                    <div class="text-center">
                        <h2 class="font-weight-normal text-primary" data-plugin="counterup">
                            <span class="rated-restaurants-amount"></span>
                        </h2>
                        <h5>Restaurants bewertet</h5>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="card-box widget-user">
                    <div class="text-center">
                        <h2 class="font-weight-normal text-primary" data-plugin="counterup">
                            <span class="pending-restaurants-amount"></span>
                        </h2>
                        <h5>Restaurants ausstehend</h5>
                    </div>
                </div>
            </div>
        </div>




        <div class="row">

            <div class="col-xl-12">
                <div class="card-box">
                    
                    <h4 class="header-title mt-0 mb-3">Zuletzt hinzugefügte Restaurants</h4>

                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Letzter Besuch</th>
                                    <th>Bewertung</th>
                                </tr>
                            </thead>
                            <tbody class="latest-restaurants">
                                <tr>
                                    @for (var i = 0; i <= 2; i++)
                                    {
                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <div class="spinner-grow text-primary" role="status">
                                                    <span class="sr-only">Loading...</span>
                                                </div>
                                            </div>
                                        </td>
                                    }                                    
                                </tr>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!-- end col -->


        </div><!-- end row -->

        <div class="row mt-2">
            <div class="col-xl-12">
                <a href="#">
                    Alle anzeigen <i class="fas fa-angle-double-right"></i>
                </a>
            </div>
        </div>


    </div> <!-- end container -->
</div>
<!-- end wrapper -->




@section scripts {

    <script type="text/javascript">


        const RestaurantTableRow = ({ Id, Name }) => `
          <tr onclick="javascript:console.log(${Name});">
            <td>
                <a href="">
                    ${Name}
                </a>
            </td>
            <td>

            </td>
            <td>
                <span class="pm-rating fa fa-star checked"></span>
                <span class="pm-rating fa fa-star checked"></span>
                <span class="pm-rating fa fa-star checked"></span>
                <span class="pm-rating fa fa-star checked"></span>
                <span class="pm-rating fa fa-star checked"></span>
            </td>
        </tr>
        `;


        $(document).ready(function () {

            $.ajax({
                url: "/api/v1/restaurants/getLatest"
            }).then(function (data) {
                $('.latest-restaurants').empty();
                data.forEach(appendToTableRows);

            });


            $.ajax({
                url: ""
            }).then(function (data) {
                $('.rated-restaurants-amount').append(data.amountOfRatedRestaurants);
                $('.pending-restaurants-amount').append(data.amountOfPendingRestaurants);
            })

        });



        function appendToTableRows(item) {
            $('.latest-restaurants').append([item].map(RestaurantTableRow).join(''));
        }


    </script>


}